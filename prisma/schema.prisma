generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  phone     String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  RefreshTokens RefreshToken[]
  Animal        Animal[]
}

model Animal {
  id        String    @id @default(uuid())
  name      String
  age       String?
  size      String?
  breed     String?
  sex       String?
  color     String?
  image     String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  owner     User       @relation(fields: [ownerId], references: [id])
  ownerId   String
  jobOffers JobOffer[]
}

model JobOffer {
  id           String    @id @default(uuid())
  name         String
  animal       Animal    @relation(fields: [animalId], references: [id])
  animalId     String
  offerType    OfferType
  pricePerHour Float?
  pricePerDay  Float?
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @default(now())
}

enum OfferType {
  WALKING
  DAYCARE
}

model RefreshToken {
  id          String   @id @unique @default(uuid())
  hashedToken String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
